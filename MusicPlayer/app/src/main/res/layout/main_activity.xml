<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_chip_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/all_back" />

        <TextView
            android:id="@+id/tv_chip_songName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:text="hotel california"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/ib_chip_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
       android:layout_height="0dp"
        android:layout_weight="0.5"
        >
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_chip_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <SeekBar
        android:id="@+id/sb_chip_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ToggleButton
            android:id="@+id/tb_loop_choice"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:button="@null"
            android:background="@drawable/loop_choice"
            android:layout_width="32dp"
            android:textOn=" "
            android:textOff=" "
            android:layout_gravity="center"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/rb_chip_previous"
            android:onClick="onClick"
            style="@style/radioButtonStyle"
            android:text="prev" />

        <ToggleButton
            android:id="@+id/tb_chip_play"
            android:background="@drawable/button_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textOn="play"
            android:textOff="pause" />

        <Button
            android:id="@+id/rb_chip_next"
            android:onClick="onClick"
            style="@style/radioButtonStyle"
            android:text="next" />
        </LinearLayout>

</LinearLayout>